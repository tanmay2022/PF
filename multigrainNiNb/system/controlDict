FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * 
#include "../generatedInput"

application     phaseFieldBinary;

startFrom       startTime;

startTime       $STARTTIME; //0; // the actual time i.e. runtime.value() or no. of iterations*deltaT

stopAt          endTime;

endTime         $NTIMESTEPS; //324e-3; //actual time = total_iterations*deltaT

deltaT          $DELTA_t; //324e-9;

writeControl    runTime;

writeInterval   $SAVET; //162e-7;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;


